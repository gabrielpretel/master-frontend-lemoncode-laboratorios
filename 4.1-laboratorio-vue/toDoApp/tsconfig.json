{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@nuxt/types", "pinia", "pinia-plugin-persistedstate"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": ["types/**/*.d.ts", "nuxt.config.ts", "**/*.ts", "**/*.vue"]
}
